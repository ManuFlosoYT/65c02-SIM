{
    "version": 3,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 24,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "linux-release",
            "displayName": "Linux Release",
            "description": "Release build for Linux using Ninja",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "linux-debug",
            "displayName": "Linux Debug",
            "description": "Debug build for Linux using Ninja",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "windows-release",
            "displayName": "Windows Release (MinGW)",
            "description": "Cross-compile Release build for Windows using MinGW",
            "generator": "Ninja",
            "toolchainFile": "${sourceDir}/cmake/mingw-toolchain.cmake",
            "binaryDir": "${sourceDir}/build_win/release",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "windows-debug",
            "displayName": "Windows Debug (MinGW)",
            "description": "Cross-compile Debug build for Windows using MinGW",
            "generator": "Ninja",
            "toolchainFile": "${sourceDir}/cmake/mingw-toolchain.cmake",
            "binaryDir": "${sourceDir}/build_win/debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "linux-release",
            "configurePreset": "linux-release"
        },
        {
            "name": "linux-debug",
            "configurePreset": "linux-debug"
        },
        {
            "name": "windows-release",
            "configurePreset": "windows-release"
        },
        {
            "name": "windows-debug",
            "configurePreset": "windows-debug"
        }
    ]
}